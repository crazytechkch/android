<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/fieldadd_spn_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/fieldadd_spn_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date_time" />

            <Button
                android:id="@+id/fieldadd_btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_date_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date_time" />

            <Button
                android:id="@+id/fieldadd_btn_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end_date_time" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
				    android:layout_weight="0.33"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
		        
			        <include layout="@layout/box_bk"/>
			
			        <EditText
			            android:id="@+id/fieldadd_et_books"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:text="0"
			            android:paddingLeft="3dp"
			            android:textAppearance="?android:attr/textAppearanceSmall" 
			            android:inputType="number"
			            android:selectAllOnFocus="true"/>
		        </LinearLayout>
		        
				<LinearLayout
			        android:layout_weight="0.33"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
		        
			        <include layout="@layout/box_mg"/>
			
			        <EditText
			            android:id="@+id/fieldadd_et_mags"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:text="0"
			            android:paddingLeft="3dp"
			            android:textAppearance="?android:attr/textAppearanceSmall" 
			            android:inputType="number"
			            android:selectAllOnFocus="true"/>
		        </LinearLayout>
		        
				<LinearLayout
			        android:layout_weight="0.33"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
		        
			        <include layout="@layout/box_br"/>
			
			        <EditText
			            android:id="@+id/fieldadd_et_brochures"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:text="0"
			            android:paddingLeft="3dp"
			            android:textAppearance="?android:attr/textAppearanceSmall"
			            android:inputType="number" 
			            android:selectAllOnFocus="true"/>
		        </LinearLayout>
		        
				<LinearLayout
			        android:layout_weight="0.33"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
		        
			        <include layout="@layout/box_tr"/>
			
			        <EditText
			            android:id="@+id/fieldadd_et_tract"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:text="0"
			            android:paddingLeft="3dp"
			            android:textAppearance="?android:attr/textAppearanceSmall"
			            android:inputType="number" 
			            android:selectAllOnFocus="true"/>
		        </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/fieldadd_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress" 
                android:hint="@string/address"
				android:selectAllOnFocus="true">
            </EditText>

            <EditText
                android:id="@+id/fieldadd_et_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" 
                android:hint="@string/remarks"
                android:selectAllOnFocus="true"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/fieldadd_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/fieldadd_btn_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/done" />

    </LinearLayout>

</LinearLayout>
