<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/fieldlist_spn_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/fieldlist_spn_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

	<include
	    android:id="@+id/fieldlist_inc_header"
	    layout="@layout/listitem_field_record" />

	<ExpandableListView
	    android:id="@+id/expListV_field_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:groupIndicator="@drawable/transparent" >
	    
	
	</ExpandableListView>
    

</LinearLayout>
